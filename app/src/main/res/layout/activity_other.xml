<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    tools:context="com.semicolon.eslamy.Activities.OtherActivity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:src="@drawable/home" />

       <!--     <TextView
                android:id="@+id/txt_advistors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:background="@drawable/detail_item_bg"
                android:clickable="true"
                android:drawableRight="@drawable/phone"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="@string/Guides_Numbers"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="bold" />-->
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/detail_item_bg"
            android:clickable="true"

            >

            <TextView
                android:id="@+id/hq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:text="القرآن وتفسيرة"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:paddingRight="25dp"
                />
            <TextView
                android:paddingLeft="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@id/hq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:singleLine="true"
                android:text="Holy Quran"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"

                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/detail_item_bg"
            android:clickable="true"

            >

            <TextView
                android:id="@+id/nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:text="هكذا أصبحت مسلم"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:paddingRight="25dp"
                />
            <TextView
                android:paddingLeft="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="New Muslim"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/detail_item_bg"
            android:clickable="true"

            >

            <TextView
                android:id="@+id/faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:text="أسئلة مكررة"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"  android:layout_alignParentRight="true"
                android:paddingRight="25dp"
                />
            <TextView
                android:paddingLeft="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:singleLine="true"
                android:text="FAQ"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"

                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/detail_item_bg"
            android:clickable="true"

            >

            <TextView
                android:id="@+id/pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:text="محمد ص"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:paddingRight="25dp"
                />
            <TextView
                android:paddingLeft="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@id/pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pm"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:text="Prophet muhamed"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/detail_item_bg"
            android:clickable="true"

            >

            <TextView
                android:id="@+id/sh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:text="مشاركة التطبيق"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:paddingRight="25dp"
                />
            <TextView
                android:paddingLeft="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/sh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:singleLine="true"
                android:text="Share"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_advistors"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/detail_item_bg"
            android:clickable="true"

            >

            <TextView
                android:id="@+id/hqg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:text=" ارقام الدعاه"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:paddingRight="25dp"
                />
            <TextView
                android:paddingLeft="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@id/hqg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:singleLine="true"
                android:text="Guides Numbers "
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"

                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/detail_item_bg"
            android:clickable="true">

            <TextView
                android:id="@+id/cu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:text="إتصل بنا"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:paddingRight="25dp"
                />
            <TextView
                android:paddingLeft="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/cu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:longClickable="false"
                android:singleLine="true"
                android:text="Contacts"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>

</ScrollView>
