<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.semicolon.eslamy.Activities.OtherActivity"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@drawable/background"
    android:scrollbars="none"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <ImageView
            android:id="@+id/img_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:src="@drawable/home"
            android:layout_gravity="left"
            />
            <TextView
                android:id="@+id/txt_advistors"
                android:background="@drawable/detail_item_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:clickable="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/Guides_Numbers"
                android:drawableRight="@drawable/phone"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"

                >
                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/item"
                    android:clickable="true"
                    android:layout_gravity="center"

                    >
                    <TextView
                        android:id="@+id/hq"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="القرآن وتفسيرة"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:clickable="false"
                        android:longClickable="false"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                </RelativeLayout>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Holy Quran"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:clickable="false"
                    android:longClickable="false"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:background="#e0e0e0"

                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/logo"
                android:layout_centerInParent="true"
                />

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                >
                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/item"
                    android:clickable="true"
                    android:layout_gravity="center"


                    >
                    <TextView
                        android:id="@+id/nm"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="هكذا أصبحت مسلم"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:clickable="false"
                        android:longClickable="false"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="New Muslim"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:clickable="false"
                    android:longClickable="false"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:singleLine="true"
                    android:background="#e0e0e0"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/ll1"

                >
                <RelativeLayout
                    android:id="@+id/rl3"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/item"
                    android:clickable="true"
                    android:layout_gravity="center"


                    >
                    <TextView
                        android:id="@+id/faq"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="أسئلة مكررة"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:clickable="false"
                        android:longClickable="false"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                </RelativeLayout>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="FAQ"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:clickable="false"
                    android:longClickable="false"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:background="#e0e0e0"

                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                >
                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/item"
                    android:clickable="true"
                    android:layout_gravity="right"


                    >
                    <TextView
                        android:id="@+id/pm"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="محمد ص"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:clickable="false"
                        android:longClickable="false"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Prophet muhamed"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:clickable="false"
                    android:longClickable="false"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:background="#e0e0e0"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/colorPrimary"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/ll4"
                >
                <RelativeLayout
                    android:id="@+id/rl5"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/item"
                    android:clickable="true"
                    android:layout_gravity="center"


                    >
                    <TextView
                        android:id="@+id/sh"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="مشاركة التطبيق"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:clickable="false"
                        android:longClickable="false"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                </RelativeLayout>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Share"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:clickable="false"
                    android:longClickable="false"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:background="#e0e0e0"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/ll5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-50dp"
                >
                <RelativeLayout
                    android:id="@+id/rl6"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/item"
                    android:clickable="true"
                    android:layout_gravity="center"

                    >
                    <TextView
                        android:id="@+id/cu"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="إتصل بنا"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:clickable="false"
                        android:longClickable="false"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                </RelativeLayout>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Contacts"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:clickable="false"
                    android:longClickable="false"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:background="#e0e0e0"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
